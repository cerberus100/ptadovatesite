# Deployment types: docker, amplify, aws

# ===== WORDPRESS CONFIG =====
WP_SITE_URL=http://localhost
WP_SITE_TITLE="Helping Hands - Wound Care Advocacy"
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin123!
WP_ADMIN_EMAIL=admin@helpinghands.com

# ===== DATABASE CONFIG =====
DB_NAME=helping_hands
DB_USER=wp_user
DB_PASSWORD=wp_secure_password_2024!
